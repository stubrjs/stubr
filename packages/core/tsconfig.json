{
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": true,
        "sourceMap": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "strict": true
    },
    "typeRoots": ["./src/@types"],
    "include": ["./src", "webpack.config.js"],
    "exclude": ["node_modules"]
}
